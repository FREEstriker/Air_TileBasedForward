#version 450
#extension GL_GOOGLE_include_directive: enable

layout (local_size_x = 1, local_size_y = 1) in;

layout(set = 0, binding = 0) buffer WeightInfo
{
    float weight;
}weightInfo;

layout(set = 1, binding = 0) uniform sampler2D prefilteredImage;

void main() 
{
    weightInfo.weight = 1.0f / texture(prefilteredImage, vec2(0, 0)).a;
}
